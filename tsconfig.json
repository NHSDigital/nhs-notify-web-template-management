{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/amplify_outputs.json": ["./amplify_outputs.json"],
      "amplify/*": ["./amplify/*"],
      "@atoms/*": ["./src/components/atoms/*"],
      "@app/*": ["./src/app/*"],
      "@content/*": ["./src/content/*"],
      "@organisms/*": ["./src/components/organisms/*"],
      "@molecules/*": ["./src/components/molecules/*"],
      "@layouts/*": ["./src/components/layouts/*"],
      "@forms/*": ["./src/components/forms/*"],
      "@styles/*": ["./src/styles/*"],
      "@types/*": ["./src/types/*"],
      "@testhelpers": ["./src/__tests__/helpers"],
      "@utils/*": ["./src/utils/*"],
      "@domain/*": ["./src/domain/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules"]
}
