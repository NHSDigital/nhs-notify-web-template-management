{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2018",
      "es2015"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/amplify_outputs.json": [
        "./amplify_outputs.json"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@atoms/*": [
        "./src/components/atoms/*"
      ],
      "@content/*": [
        "./src/content/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@forms/*": [
        "./src/components/forms/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@layouts/*": [
        "./src/components/layouts/*"
      ],
      "@molecules/*": [
        "./src/components/molecules/*"
      ],
      "@organisms/*": [
        "./src/components/organisms/*"
      ],
      "@providers/*": [
        "./src/components/providers/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@testhelpers": [
        "./src/__tests__/helpers"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.ts"
  ]
}
