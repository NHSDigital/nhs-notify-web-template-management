{
  "name": "nhs-notify-web-template-management",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir .",
    "lint:fix": "next lint  --dir . --fix",
    "test:unit": "jest && npm run test:unit:backend-api && npm run test:unit:authorizer",
    "test:accessibility": "npm run copy-files-for-testing && pa11y-ci -c ./tests/accessibility/.pa11y-ci.js",
    "app:start": "pm2 start npm -- start",
    "app:wait": "wait-on -l http://localhost:3000/templates/create-and-submit-templates",
    "app:stop": "pm2 kill",
    "create-sandbox": "pm2 start npx -- ampx sandbox",
    "destroy-sandbox": "npx ampx sandbox delete --y",
    "create-backend-sandbox": "./scripts/create_backend_sandbox.sh",
    "destroy-backend-sandbox": "./scripts/destroy_backend_sandbox.sh",
    "copy-files-for-testing": "mkdir -p public/testing && cp amplify/functions/send-email/email-template.html public/testing/email-template.html",
    "generate-dependencies": "cd amplify && npm ci && npm run generate-dependencies && cd ..",
    "typecheck": "tsc --listFiles --project ./tsconfig.json && npm run typecheck:backend-api && npm run typecheck:authorizer",
    "test:unit:backend-api": "npm run test:unit --prefix lambdas/backend-api",
    "test:unit:backend-client": "npm run test:unit --prefix lambdas/backend-client",
    "test:unit:authorizer": "npm run test:unit --prefix lambdas/authorizer",
    "typecheck:backend-api": "npm run typecheck --prefix lambdas/backend-api",
    "typecheck:backend-client": "npm run typecheck --prefix lambdas/backend-client",
    "typecheck:authorizer": "npm run typecheck --prefix lambdas/authorizer"
  },
  "dependencies": {
    "@aws-amplify/adapter-nextjs": "^1.2.23",
    "@aws-amplify/backend": "^1.2.0",
    "@aws-sdk/client-ses": "^3.637.0",
    "markdown-it": "^13.0.1",
    "mimetext": "^3.0.24",
    "next": "14.2.13",
    "nhsuk-frontend": "^8.3.0",
    "nhsuk-react-components": "^4.1.1",
    "react": "^18",
    "react-dom": "^18",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@aws-amplify/backend-cli": "^1.2.5",
    "@swc/core": "^1.9.3",
    "@swc/jest": "^0.2.37",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/markdown-it": "^13.0.1",
    "@types/node": "^22.8.1",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "constructs": "^10.3.0",
    "esbuild": "^0.24.0",
    "eslint": "^8",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-next": "14.2.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-html": "^8.1.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^2.0.2",
    "eslint-plugin-unicorn": "^55.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-mock-extended": "^3.0.7",
    "mochawesome": "^7.1.3",
    "nhs-notify-web-template-management-ui-tests": "file:tests/test-team",
    "pa11y": "^8.0.0",
    "pa11y-ci": "^3.1.0",
    "pa11y-ci-reporter-html": "^7.0.0",
    "pm2": "^5.4.2",
    "prettier": "^3.3.3",
    "sass": "^1.80.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4",
    "wait-on": "^8.0.0",
    "whatwg-fetch": "^3.6.20"
  },
  "overrides": {
    "pa11y-ci": {
      "pa11y": "^8.0.0"
    }
  }
}
