{
  "name": "nhs-notify-web-template-management",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test:unit": "jest",
    "cypress:open": "cypress open",
    "test:e2e": "cypress run",
    "test:accessibility": "pa11y-ci -c ./tests/accessibility/.pa11y-ci.js",
    "pretest:e2e:local": "npm run app:start",
    "test:e2e:local": "npm run app:wait && npm run test:e2e",
    "posttest:e2e:local": "npm run app:stop",
    "pretest:accessibility:local": "npm run app:start",
    "test:accessibility:local": "npm run app:wait && npm run test:accessibility",
    "post:accessibility:local": "npm run app:stop",
    "app:start": "pm2 start npm -- start",
    "app:wait": "wait-on -l http://localhost:3000",
    "app:stop": "pm2 kill"
  },
  "dependencies": {
    "next": "14.2.3",
    "nhsuk-frontend": "^8.1.1",
    "nhsuk-react-components": "^4.0.2",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "constructs": "^10.3.0",
    "cypress": "^13.11.0",
    "esbuild": "^0.21.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "mochawesome": "^7.1.3",
    "pa11y-ci": "^3.1.0",
    "pa11y-ci-reporter-html": "^6.0.2",
    "pa11y-reporter-html": "^2.0.0",
    "pm2": "^5.4.0",
    "prettier": "^3.3.1",
    "sass": "^1.77.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.15.1",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0"
  }
}
