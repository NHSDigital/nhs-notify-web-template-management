{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "paths": {
      "@backend-api/templates/*": [
        "./src/templates/*"
      ],
      "@backend-api/utils/*": [
        "./src/utils/*"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "scripts/generate-dependencies.ts"
  ],
  "resolveJsonModule": true
}
