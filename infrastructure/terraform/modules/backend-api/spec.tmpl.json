{
  "openapi": "3.0.1",
  "info": {
    "title": "NHS Notify - Web UI - Template Management API",
    "description": "Backend for NHS Notify Template Management Web UI",
    "version": "v1"
  },
  "paths": {
    "/v1/template/{templateId}": {
      "get": {
        "summary": "Get a template",
        "description": "Get a template template by Id",
        "security": [
          {
            "authorizer": []
          }
        ],
        "parameters": [
          {
            "name": "templateId",
            "in": "path",
            "description": "ID of template to return",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "headers": {
              "Content-Type": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Failure"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "credentials": "${APIG_EXECUTION_ROLE_ARN}",
          "contentHandling": "CONVERT_TO_TEXT",
          "httpMethod": "POST",
          "passthroughBehavior": "WHEN_NO_TEMPLATES",
          "uri": "arn:aws:apigateway:${AWS_REGION}:lambda:path/2015-03-31/functions/${GET_LAMBDA_ARN}/invocations",
          "responses": {
            ".*": {
              "statusCode": "200"
            }
          },
          "timeoutInMillis": 29000,
          "type": "AWS_PROXY"
        }
      },
      "post": {
        "summary": "Update a template",
        "description": "Update a template template by Id",
        "security": [
          {
            "authorizer": []
          }
        ],
        "parameters": [
          {
            "name": "templateId",
            "in": "path",
            "description": "ID of template to update",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Template to update",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTemplate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "200 response",
            "headers": {
              "Content-Type": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Failure"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "credentials": "${APIG_EXECUTION_ROLE_ARN}",
          "contentHandling": "CONVERT_TO_TEXT",
          "httpMethod": "POST",
          "passthroughBehavior": "WHEN_NO_TEMPLATES",
          "uri": "arn:aws:apigateway:${AWS_REGION}:lambda:path/2015-03-31/functions/${UPDATE_LAMBDA_ARN}/invocations",
          "responses": {
            ".*": {
              "statusCode": "200"
            }
          },
          "timeoutInMillis": 29000,
          "type": "AWS_PROXY"
        }
      }
    },
    "/v1/template": {
      "post": {
        "summary": "Create a template",
        "description": "Create a template",
        "security": [
          {
            "authorizer": []
          }
        ],
        "requestBody": {
          "description": "Template to create",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTemplate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "201 response",
            "headers": {
              "Content-Type": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Failure"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "credentials": "${APIG_EXECUTION_ROLE_ARN}",
          "contentHandling": "CONVERT_TO_TEXT",
          "httpMethod": "POST",
          "passthroughBehavior": "WHEN_NO_TEMPLATES",
          "uri": "arn:aws:apigateway:${AWS_REGION}:lambda:path/2015-03-31/functions/${CREATE_LAMBDA_ARN}/invocations",
          "responses": {
            ".*": {
              "statusCode": "200"
            }
          },
          "timeoutInMillis": 29000,
          "type": "AWS_PROXY"
        }
      }
    },
    "/v1/templates": {
      "get": {
        "summary": "List all templates",
        "description": "List all templates",
        "security": [
          {
            "authorizer": []
          }
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "headers": {
              "Content-Type": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessList"
                }
              }
            }
          },
          "default": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Failure"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "credentials": "${APIG_EXECUTION_ROLE_ARN}",
          "contentHandling": "CONVERT_TO_TEXT",
          "httpMethod": "POST",
          "passthroughBehavior": "WHEN_NO_TEMPLATES",
          "uri": "arn:aws:apigateway:${AWS_REGION}:lambda:path/2015-03-31/functions/${LIST_LAMBDA_ARN}/invocations",
          "responses": {
            ".*": {
              "statusCode": "200"
            }
          },
          "timeoutInMillis": 29000,
          "type": "AWS_PROXY"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "authorizer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "x-amazon-apigateway-authtype": "custom",
        "x-amazon-apigateway-authorizer": {
          "type": "request",
          "authorizerUri": "arn:aws:apigateway:${AWS_REGION}:lambda:path/2015-03-31/functions/${AUTHORIZER_LAMBDA_ARN}/invocations",
          "authorizerCredentials": "${APIG_EXECUTION_ROLE_ARN}",
          "identitySource": "method.request.header.authorization",
          "authorizerResultTtlInSeconds": 300
        }
      }
    },
    "schemas": {
      "TemplateType": {
        "type": "string",
        "enum": [
          "NHS_APP",
          "EMAIL",
          "SMS",
          "LETTER"
        ]
      },
      "TemplateStatus": {
        "type": "string",
        "enum": [
          "NOT_YET_SUBMITTED",
          "SUBMITTED",
          "DELETED"
        ]
      },
      "Language": {
        "type": "string",
        "enum": [
          "ar",
          "bg",
          "bn",
          "de",
          "el",
          "en",
          "es",
          "fa",
          "fr",
          "gu",
          "hi",
          "hu",
          "it",
          "ku",
          "lt",
          "lv",
          "ne",
          "pa",
          "pl",
          "pt",
          "ro",
          "ru",
          "sk",
          "so",
          "sq",
          "ta",
          "tr",
          "ur",
          "zh"
        ]
      },
      "LetterType": {
        "type": "string",
        "enum": [
          "q1",
          "q4",
          "x0",
          "x1",
          "x3"
        ]
      },
      "VirusScanStatus": {
        "type": "string",
        "enum": [
          "PENDING",
          "FAILED",
          "PASSED"
        ]
      },
      "FileDetails": {
        "type": "object",
        "required": [
          "fileName"
        ],
        "properties": {
          "fileName": {
            "type": "string"
          },
          "currentVersion": {
            "type": "string"
          },
          "virusScanStatus": {
            "$ref": "#/components/schemas/VirusScanStatus"
          }
        }
      },
      "LetterFiles": {
        "type": "object",
        "required": [
          "pdfTemplate"
        ],
        "properties": {
          "pdfTemplate": {
            "$ref": "#/components/schemas/FileDetails"
          },
          "testDataCsv": {
            "$ref": "#/components/schemas/FileDetails"
          },
          "proofs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FileDetails"
            }
          }
        }
      },
      "NHSAppProperties": {
        "type": "object",
        "required": [
          "templateType",
          "message"
        ],
        "properties": {
          "templateType": {
            "$ref": "#/components/schemas/TemplateType"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "EmailProperties": {
        "type": "object",
        "required": [
          "templateType",
          "message",
          "subject"
        ],
        "properties": {
          "templateType": {
            "$ref": "#/components/schemas/TemplateType"
          },
          "message": {
            "type": "string"
          },
          "subject": {
            "type": "string"
          }
        }
      },
      "SMSProperties": {
        "type": "object",
        "required": [
          "templateType",
          "message"
        ],
        "properties": {
          "templateType": {
            "$ref": "#/components/schemas/TemplateType"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "LetterProperties": {
        "type": "object",
        "required": [
          "templateType",
          "letterType",
          "language",
          "files"
        ],
        "properties": {
          "templateType": {
            "$ref": "#/components/schemas/TemplateType"
          },
          "letterType": {
            "$ref": "#/components/schemas/LetterType"
          },
          "language": {
            "$ref": "#/components/schemas/Language"
          },
          "files": {
            "$ref": "#/components/schemas/LetterFiles"
          }
        }
      },
      "BaseTemplate": {
        "type": "object",
        "required": [
          "templateType",
          "name"
        ],
        "properties": {
          "templateType": {
            "$ref": "#/components/schemas/TemplateType"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "CreateTemplate": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseTemplate"
          },
          {
            "oneOf": [
              {
                "$ref": "#/components/schemas/NHSAppProperties"
              },
              {
                "$ref": "#/components/schemas/EmailProperties"
              },
              {
                "$ref": "#/components/schemas/SMSProperties"
              },
              {
                "$ref": "#/components/schemas/LetterProperties"
              }
            ],
            "discriminator": {
              "propertyName": "templateType",
              "mapping": {
                "NHS_APP": "#/components/schemas/NHSAppProperties",
                "EMAIL": "#/components/schemas/EmailProperties",
                "SMS": "#/components/schemas/SMSProperties",
                "LETTER": "#/components/schemas/LetterProperties"
              }
            }
          }
        ]
      },
      "UpdateTemplate": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseTemplate"
          },
          {
            "type": "object",
            "required": [
              "templateStatus"
            ],
            "properties": {
              "templateStatus": {
                "$ref": "#/components/schemas/TemplateStatus"
              }
            }
          },
          {
            "oneOf": [
              {
                "$ref": "#/components/schemas/NHSAppProperties"
              },
              {
                "$ref": "#/components/schemas/EmailProperties"
              },
              {
                "$ref": "#/components/schemas/SMSProperties"
              },
              {
                "$ref": "#/components/schemas/LetterProperties"
              }
            ],
            "discriminator": {
              "propertyName": "templateType",
              "mapping": {
                "NHS_APP": "#/components/schemas/NHSAppProperties",
                "EMAIL": "#/components/schemas/EmailProperties",
                "SMS": "#/components/schemas/SMSProperties",
                "LETTER": "#/components/schemas/LetterProperties"
              }
            }
          }
        ]
      },
      "TemplateDTO": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseTemplate"
          },
          {
            "type": "object",
            "required": [
              "id",
              "templateStatus",
              "createdAt",
              "updatedAt"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "templateStatus": {
                "$ref": "#/components/schemas/TemplateStatus"
              },
              "createdAt": {
                "type": "string",
                "format": "date-time"
              },
              "updatedAt": {
                "type": "string",
                "format": "date-time"
              }
            }
          },
          {
            "oneOf": [
              {
                "$ref": "#/components/schemas/NHSAppProperties"
              },
              {
                "$ref": "#/components/schemas/EmailProperties"
              },
              {
                "$ref": "#/components/schemas/SMSProperties"
              },
              {
                "$ref": "#/components/schemas/LetterProperties"
              }
            ],
            "discriminator": {
              "propertyName": "templateType",
              "mapping": {
                "NHS_APP": "#/components/schemas/NHSAppProperties",
                "EMAIL": "#/components/schemas/EmailProperties",
                "SMS": "#/components/schemas/SMSProperties",
                "LETTER": "#/components/schemas/LetterProperties"
              }
            }
          }
        ]
      },
      "Success": {
        "type": "object",
        "required": [
          "template",
          "statusCode"
        ],
        "properties": {
          "template": {
            "$ref": "#/components/schemas/TemplateDTO"
          },
          "statusCode": {
            "type": "integer"
          }
        }
      },
      "SuccessList": {
        "type": "object",
        "required": [
          "templates",
          "statusCode"
        ],
        "properties": {
          "templates": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TemplateDTO"
            }
          },
          "statusCode": {
            "type": "integer"
          }
        }
      },
      "Failure": {
        "type": "object",
        "required": [
          "technicalMessage",
          "statusCode"
        ],
        "properties": {
          "technicalMessage": {
            "type": "string"
          },
          "statusCode": {
            "type": "integer"
          },
          "details": {}
        }
      }
    }
  }
}
