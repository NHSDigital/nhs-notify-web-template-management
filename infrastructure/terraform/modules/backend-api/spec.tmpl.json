  "components": {
    "securitySchemes": {
      "authorizer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "x-amazon-apigateway-authtype": "custom",
        "x-amazon-apigateway-authorizer": {
          "type": "request",
          "authorizerUri": "arn:aws:apigateway:${AWS_REGION}:lambda:path/2015-03-31/functions/${AUTHORIZER_LAMBDA_ARN}/invocations",
          "authorizerCredentials": "${APIG_EXECUTION_ROLE_ARN}",
          "identitySource": "method.request.header.authorization",
          "authorizerResultTtlInSeconds": 300
        }
      }
    },
    "schemas": {
      "TemplateType": {
        "type": "string",
        "enum": [
          "NHS_APP",
          "EMAIL",
          "SMS",
          "LETTER"
        ]
      },
      "TemplateStatus": {
        "type": "string",
        "enum": [
          "DELETED",
          "NOT_YET_SUBMITTED",
          "PENDING_UPLOAD",
          "PENDING_PROOF_REQUEST",
          "PENDING_VALIDATION",
          "SUBMITTED",
          "VALIDATION_FAILED",
          "VIRUS_SCAN_FAILED"
        ]
      },
      "Language": {
        "type": "string",
        "enum": [
          "ar",
          "bg",
          "bn",
          "de",
          "el",
          "en",
          "es",
          "fa",
          "fr",
          "gu",
          "hi",
          "hu",
          "it",
          "ku",
          "lt",
          "lv",
          "ne",
          "pa",
          "pl",
          "pt",
          "ro",
          "ru",
          "sk",
          "so",
          "sq",
          "ta",
          "tr",
          "ur",
          "zh"
        ]
      },
      "LetterType": {
        "type": "string",
        "enum": [
          "q1",
          "q4",
          "x0",
          "x1",
          "x3"
        ]
      },
      "VirusScanStatus": {
        "type": "string",
        "enum": [
          "PENDING",
          "FAILED",
          "PASSED"
        ]
      },
      "FileDetails": {
        "type": "object",
        "required": [
          "fileName",
          "currentVersion",
          "virusScanStatus"
        ],
        "properties": {
          "fileName": {
            "type": "string"
          },
          "currentVersion": {
            "type": "string"
          },
          "virusScanStatus": {
            "$ref": "#/components/schemas/VirusScanStatus"
          }
        }
      },
      "LetterFiles": {
        "type": "object",
        "required": [
          "pdfTemplate"
        ],
        "properties": {
          "pdfTemplate": {
            "$ref": "#/components/schemas/FileDetails"
          },
          "testDataCsv": {
            "$ref": "#/components/schemas/FileDetails"
          },
          "proofs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FileDetails"
            }
          }
        }
      },
      "NhsAppProperties": {
        "type": "object",
        "required": [
          "message",
          "templateType"
        ],
        "properties": {
          "message": {
            "type": "string"
          },
          "templateType": {
            "type": "string",
            "enum": [
              "NHS_APP"
            ]
          }
        }
      },
      "EmailProperties": {
        "type": "object",
        "required": [
          "message",
          "subject",
          "templateType"
        ],
        "properties": {
          "message": {
            "type": "string"
          },
          "subject": {
            "type": "string"
          },
          "templateType": {
            "type": "string",
            "enum": [
              "EMAIL"
            ]
          }
        }
      },
      "SmsProperties": {
        "type": "object",
        "required": [
          "message",
          "templateType"
        ],
        "properties": {
          "message": {
            "type": "string"
          },
          "templateType": {
            "type": "string",
            "enum": [
              "SMS"
            ]
          }
        }
      },
      "CreateLetterProperties": {
        "type": "object",
        "required": [
          "letterType",
          "language",
          "templateType"
        ],
        "properties": {
          "letterType": {
            "$ref": "#/components/schemas/LetterType"
          },
          "language": {
            "$ref": "#/components/schemas/Language"
          },
          "files": {
            "$ref": "#/components/schemas/LetterFiles"
          },
          "templateType": {
            "type": "string",
            "enum": [
              "LETTER"
            ]
          }
        }
      },
      "LetterProperties": {
        "allOf": [
          {
            "$ref": "#/components/schemas/CreateLetterProperties"
          },
          {
            "type": "object",
            "required": [
              "files",
              "templateType"
            ],
            "properties": {
              "files": {
                "$ref": "#/components/schemas/LetterFiles"
              },
              "personalisationParameters": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "templateType": {
                "type": "string",
                "enum": [
                  "LETTER"
                ]
              }
            }
          }
        ]
      },
      "BaseTemplate": {
        "type": "object",
        "required": [
          "templateType",
          "name"
        ],
        "properties": {
          "templateType": {
            "$ref": "#/components/schemas/TemplateType"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "BaseCreatedTemplate": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseTemplate"
          },
          {
            "type": "object",
            "required": [
              "id",
              "templateStatus",
              "createdAt",
              "updatedAt"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "templateStatus": {
                "$ref": "#/components/schemas/TemplateStatus"
              },
              "createdAt": {
                "type": "string",
                "format": "date-time"
              },
              "updatedAt": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        ]
      },
      "CreateUpdateTemplate": {
        "type": "object",
        "oneOf": [
          {
            "allOf": [
              {
                "$ref": "#/components/schemas/BaseTemplate"
              },
              {
                "$ref": "#/components/schemas/NhsAppProperties"
              }
            ]
          },
          {
            "allOf": [
              {
                "$ref": "#/components/schemas/BaseTemplate"
              },
              {
                "$ref": "#/components/schemas/SmsProperties"
              }
            ]
          },
          {
            "allOf": [
              {
                "$ref": "#/components/schemas/BaseTemplate"
              },
              {
                "$ref": "#/components/schemas/EmailProperties"
              }
            ]
          },
          {
            "allOf": [
              {
                "$ref": "#/components/schemas/BaseTemplate"
              },
              {
                "$ref": "#/components/schemas/CreateLetterProperties"
              }
            ]
          }
        ]
      },
      "TemplateDto": {
        "type": "object",
        "oneOf": [
          {
            "allOf": [
              {
                "$ref": "#/components/schemas/BaseCreatedTemplate"
              },
              {
                "$ref": "#/components/schemas/LetterProperties"
              }
            ]
          },
          {
            "allOf": [
              {
                "$ref": "#/components/schemas/BaseCreatedTemplate"
              },
              {
                "$ref": "#/components/schemas/NhsAppProperties"
              }
            ]
          },
          {
            "allOf": [
              {
                "$ref": "#/components/schemas/BaseCreatedTemplate"
              },
              {
                "$ref": "#/components/schemas/SmsProperties"
              }
            ]
          },
          {
            "allOf": [
              {
                "$ref": "#/components/schemas/BaseCreatedTemplate"
              },
              {
                "$ref": "#/components/schemas/EmailProperties"
              }
            ]
          }
        ]
      },
      "Success": {
        "type": "object",
        "required": [
          "template",
          "statusCode"
        ],
        "properties": {
          "template": {
            "$ref": "#/components/schemas/TemplateDto"
          },
          "statusCode": {
            "type": "integer"
          }
        }
      },
      "SuccessList": {
        "type": "object",
        "required": [
          "templates",
          "statusCode"
        ],
        "properties": {
          "templates": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TemplateDto"
            }
          },
          "statusCode": {
            "type": "integer"
          }
        }
      },
      "Failure": {
        "type": "object",
        "required": [
          "technicalMessage",
          "statusCode"
        ],
        "properties": {
          "technicalMessage": {
            "type": "string"
          },
          "statusCode": {
            "type": "integer"
          },
          "details": {}
        }
      }
    }
  }
}
